DEF[PORTVERSION]=	2.12
DEF[SOVERSION]=		2.0.5
# ----------------------------------------------------------------------------

NAMEBASE=		libsigsegv
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Handling page faults in user mode
HOMEPAGE=		http://www.gnu.org/software/libsigsegv/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/libsigsegv
DISTFILE[1]=		libsigsegv-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete static shared

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:static
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		static:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"_SIGSEGV_H"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/sigsegv.h.in
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libsigsegv

USES=			libtool macfix
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		AWK="{{AWK}}" --enable-shared
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}

do-test:
	(cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} ${MAKE_CMD} ${MAKE_FLAGS} \
		${MAKEFILE} ${MAKE_ARGS} check)
